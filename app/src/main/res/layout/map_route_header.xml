<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/map_route_header_border">

    <TextView
            android:id="@+id/ic_exchange_bus_stops"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:text="M"
            android:textSize="50dp"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="@color/white"
            android:background="@color/dark_blue"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:id="@+id/map_route_header_to"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8.0px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toLeftOf="@id/ic_exchange_bus_stops"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:text="Fin" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map_route_header_from"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toRightOf="@id/ic_exchange_bus_stops"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="8.0px"
            android:layout_above="@id/map_route_header_to"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:text="Inicio" />

</RelativeLayout>